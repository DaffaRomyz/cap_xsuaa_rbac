{
  "scopes": [
    {
      "name": "$XSAPPNAME.ReadBooks",
      "description": "scope for read books"
    },
    {
      "name": "$XSAPPNAME.WriteBooksOwn",
      "description": "scope for write own books"
    },
    {
      "name": "$XSAPPNAME.WriteBooksCountry",
      "description": "scope for write books with same country"
    },
    {
      "name": "$XSAPPNAME.WriteBooksAll",
      "description": "scope for write all books"
    },
    {
      "name": "$XSAPPNAME.ReadAuthors",
      "description": "scope for read authors"
    },
    {
      "name": "$XSAPPNAME.WriteAuthorsOwn",
      "description": "scope for write own authors"
    },
    {
      "name": "$XSAPPNAME.WriteAuthorsCountry",
      "description": "scope for write authors with same country"
    },
    {
      "name": "$XSAPPNAME.WriteAuthorsAll",
      "description": "scope for write all authors"
    },
    {
      "name": "$XSAPPNAME.EnableAuthors",
      "description": "scope for enable/disable authors"
    }
  ],
  "attributes": [
    {
      "name": "Country",
      "description": "Contains country information of assigned user",
      "valueType": "string",
      "valueRequired": "false"
    }
  ],
  "role-templates": [
    {
      "name": "ReaderRole",
      "description": "Role for readers, allows to view list of books and authors",
      "scope-references": [
        "$XSAPPNAME.ReadBooks",
        "$XSAPPNAME.ReadAuthors"
      ]
    },
    {
      "name": "AuthorRole",
      "description": "Role for authors, allows to maintain own books and own authors data",
      "scope-references": [
        "$XSAPPNAME.ReadBooks",
        "$XSAPPNAME.ReadAuthors",
        "$XSAPPNAME.WriteBooksOwn",
        "$XSAPPNAME.WriteAuthorsOwn"
      ]
    },
    {
      "name": "AuditorRole",
      "description": "Role for auditors, allows to maintain books and authors according to country",
      "scope-references": [
        "$XSAPPNAME.ReadBooks",
        "$XSAPPNAME.ReadAuthors",
        "$XSAPPNAME.WriteBooksCountry",
        "$XSAPPNAME.WriteAuthorsCountry"
      ],
      "attribute-references": [
        {
          "name": "Country"
        }
      ]
    },
    {
      "name": "ManagerRole",
      "description": "Role for managers, allows to manage all data.",
      "scope-references": [
        "$XSAPPNAME.ReadBooks",
        "$XSAPPNAME.ReadAuthors",
        "$XSAPPNAME.WriteBooksAll",
        "$XSAPPNAME.WriteAuthorsAll",
        "$XSAPPNAME.EnableAuthors"
      ]
    }
  ],
  "role-collections": [
    {
      "name": "ReaderRoles",
      "role-template-references": [
        "$XSAPPNAME.ReaderRole"
      ]
    },
    {
      "name": "AuthorRoles",
      "role-template-references": [
        "$XSAPPNAME.AuthorRole"
      ]
    },{
      "name": "AuditorRoles",
      "role-template-references": [
        "$XSAPPNAME.AuditorRole"
      ]
    },
    {
      "name": "ManagerRoles",
      "role-template-references": [
        "$XSAPPNAME.ManagerRole"
      ]
    }
  ],
  "xsappname": "cap_xsuaa_rbac",
  "tenant-mode": "dedicated",
  "oauth2-configuration": {
    "redirect-uris": [
      "http://localhost:5000/login/callback"
    ]
  }
}